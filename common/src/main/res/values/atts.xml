<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--滑动返回-->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="all" value="3"/>
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>
    <attr name="SwipeBackLayoutStyle" format="reference"/>

    <!-- 健康测量尺子 -->
    <declare-styleable name="RulerView">
        <!-- 最小值 -->
        <attr name="scaleMin" format="float"/>
        <!-- 最大值 -->
        <attr name="scaleMax" format="float"/>
        <!-- 第一个刻度值，默认等于最小值 -->
        <attr name="scaleFirstMarkValue" format="float"/>
        <!-- 每刻度间隔值 -->
        <attr name="scaleDeltaValue" format="float"/>
        <!-- 每刻度间隔距离 -->
        <attr name="scaleDeltaPixel" format="integer"/>
        <!-- 尺子背景 -->
        <attr name="scaleRulerBg" format="reference"/>
        <!-- 尺子 -->
        <attr name="scaleRuler" format="reference"/>
        <!-- 标尺 -->
        <attr name="scaleThumb" format="reference"/>
        <!-- 上标尺 -->
        <attr name="scaleTopThumb" format="reference"/>
        <!-- 是否垂直 -->
        <attr name="scaleVertical" format="boolean"/>
    </declare-styleable>

    <!-- 圆形百分比 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="radiu" format="dimension"></attr>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>